<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>21 Savage Fans</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Ms. Whitfield's Open Library</h1>
  <h2>Take a book, leave a book.</h2>

  <h3>Library</h3>
  <ul class="messages">
  <% for(var i=0; i<library.length; i++) {%>
    <li class="message">
      <% if(library[i].checkOut === true){ %>
        <span class="title strikeOut"><%= library[i].title %></span>
        <span class="author strikeOut"><%= library[i].author %></span>
      <% }else{ %>
        <span class="title"><%= library[i].title %></span>
        <span class="author"><%= library[i].author %></span>
      <% } %>
      <span><i class="fa fa-check-square" aria-hidden="true"></i></span>
      <span><i class="fa fa-home"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Add a Book</h2>

  <form action="/library" method="POST">
    <input type="text" placeholder="Title" name="title">
    <input type="text" placeholder="Author" name="author">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
